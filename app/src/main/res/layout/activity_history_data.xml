<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_his_con_select"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                style="@style/my_his_ser_style"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="名称/批次"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_his_input_pici"
                        android:textColorHint="#C4C4C4"
                        android:hint="请输入名称/批次"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:background="@drawable/bg_con_search_et"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="代次"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_his_input_daici"
                        android:hint="请输入代次"
                        android:textSize="14sp"
                        android:textColorHint="#C4C4C4"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:background="@drawable/bg_con_search_et"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/my_his_ser_style">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="操作员"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_his_input_operator"
                        android:hint="请输入操作员姓名"
                        android:textSize="14sp"
                        android:textColorHint="#C4C4C4"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:background="@drawable/bg_con_search_et"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/my_his_ser_style">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="日期"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_his_input_start_date"
                        android:textColorHint="#C4C4C4"
                        android:hint="请输入开始日期"
                        android:textSize="14sp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:background="@drawable/bg_con_search_et"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:text="代次"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_his_input_end_date"
                        android:hint="请输入结束日期"
                        android:textSize="14sp"
                        android:textColorHint="#C4C4C4"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="9dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="6dp"
                        android:paddingTop="6dp"
                        android:background="@drawable/bg_con_search_et"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/my_his_ser_style"/>

            <LinearLayout
                style="@style/my_his_ser_style"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/tv_his_reset"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_reset_selector"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="重置"
                        android:textColor="#000000"
                        android:textSize="16sp"/>

                    <Button
                        android:id="@+id/tv_his_complete"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_complete_selector"
                        android:gravity="center"
                        android:padding="1dp"
                        android:text="完成"
                        android:textColor="#ffffff"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>