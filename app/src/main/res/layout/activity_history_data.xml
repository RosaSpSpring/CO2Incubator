<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:background="@color/color_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_his_con_ser_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/his_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="4dp"
            android:text="条件检索"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <LinearLayout
        style="@style/my_his_ser_style"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/pici_constraint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名称/批次"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/et_his_input_pici"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_his_input_pici"/>

            <EditText
                android:id="@+id/et_his_input_pici"
                android:layout_width="160dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/bg_con_search_et"
                android:hint="请输入名称/批次"
                android:inputType="text"
                android:lines="1"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="5dp"
                android:paddingBottom="6dp"
                android:text=""
                android:textColorHint="#C4C4C4"
                android:textSize="14sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/et_his_input_daici"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintRight_toLeftOf="@+id/et_his_input_daici"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"
                />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="代次"
                android:textColor="#000000"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/et_his_input_daici"
                app:layout_constraintEnd_toEndOf="@+id/et_his_input_daici"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/et_his_input_daici"/>

            <EditText
                android:id="@+id/et_his_input_daici"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_con_search_et"
                android:hint="请输入代次"
                android:inputType="text"
                android:lines="1"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="5dp"
                android:paddingBottom="6dp"
                android:text=""
                android:textColorHint="#C4C4C4"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toRightOf="@+id/et_his_input_pici"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.6"/>
        </android.support.constraint.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/my_his_ser_style">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:text="操作员"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_his_input_operator"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_con_search_et"
                android:hint="请输入操作员姓名"
                android:inputType="text"
                android:lines="1"
                android:paddingStart="10dp"
                android:paddingTop="6dp"
                android:paddingEnd="5dp"
                android:paddingBottom="6dp"
                android:text=""
                android:textColorHint="#C4C4C4"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/my_his_ser_style"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:text="日期"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_his_input_start_date"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_con_search_et"
                    android:gravity="center_vertical"
                    android:hint="请输入开始日期"
                    android:lines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="6dp"
                    android:textColorHint="#C4C4C4"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <Button
                    android:id="@+id/btn_his_input_start_date"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="2dp"
                    android:background="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_his_input_start_date"
                    app:layout_constraintEnd_toEndOf="@+id/tv_his_input_start_date"
                    app:layout_constraintTop_toTopOf="@+id/tv_his_input_start_date"/>
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="15dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="16sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                >

                <TextView
                    android:id="@+id/tv_his_input_end_date"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/bg_con_search_et"
                    android:gravity="center_vertical"
                    android:hint="请输入结束日期"
                    android:lines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="6dp"
                    android:textColorHint="#C4C4C4"
                    android:textSize="14sp"/>

                <Button
                    android:id="@+id/btn_his_input_end_date"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignTop="@+id/tv_his_input_end_date"
                    android:layout_alignEnd="@+id/tv_his_input_end_date"
                    android:layout_alignRight="@+id/tv_his_input_end_date"
                    android:layout_alignBottom="@+id/tv_his_input_end_date"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="1dp"
                    android:background="@android:drawable/ic_menu_close_clear_cancel"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="58"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tv_his_reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_reset_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="重置"
            android:textColor="#000000"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/tv_his_complete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_complete_selector"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="1dp"
            android:text="完成"
            android:textColor="#ffffff"
            android:textSize="16sp"/>
    </LinearLayout>


</LinearLayout>