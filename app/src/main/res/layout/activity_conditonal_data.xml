<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar_cur_con_select"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="104dp">
            <TextView
                android:text="名称/批次"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_input_pici"
                android:textColorHint="#C4C4C4"
                android:hint="请输入名称/批次"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:paddingLeft="10dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:background="@drawable/bg_con_search_et"
                android:layout_width="160dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="104dp">
            <TextView
                android:text="代次"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_input_daici"
                android:hint="请输入代次"
                android:textSize="14sp"
                android:textColorHint="#C4C4C4"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:paddingLeft="10dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:background="@drawable/bg_con_search_et"
                android:layout_width="160dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_height="105dp">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:layout_weight="3"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:textSize="16dp"
                   android:textColor="#000000"
                   android:layout_marginLeft="12dp"
                   android:gravity="center"
                   android:text="日期"/>
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_marginTop="9dp"
                   android:layout_width="match_parent"
                   android:layout_weight="4"
                   android:layout_height="0dp">
                   <TextView
                       android:id="@+id/all_month"
                       android:layout_marginLeft="12dp"
                       android:background="@drawable/bg_con_ser_tv"
                       android:textStyle="normal"
                       android:padding="1dp"
                       android:gravity="center"
                       android:text="全部"
                       android:textSize="14dp"
                       android:textColor="#101010"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"/>
                   <TextView
                       android:id="@+id/one_month"
                       android:layout_marginLeft="18dp"
                       android:background="@drawable/bg_con_ser_tv"
                       android:textStyle="normal"
                       android:padding="1dp"
                       android:gravity="center"
                       android:text="1个月"
                       android:textSize="14dp"
                       android:textColor="#101010"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"/>
                   <TextView
                       android:id="@+id/two_month"
                       android:layout_marginLeft="18dp"
                       android:layout_marginRight="12dp"
                       android:background="@drawable/bg_con_ser_tv"
                       android:textStyle="normal"
                       android:gravity="center"
                       android:padding="1dp"
                       android:text="2个月"
                       android:textSize="14dp"
                       android:textColor="#101010"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"/>

               </LinearLayout>
               <LinearLayout
                   android:layout_marginTop="18dp"
                   android:layout_weight="4"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">
                   <TextView
                       android:id="@+id/three_month"
                       android:layout_marginLeft="12dp"
                       android:background="@drawable/bg_con_ser_tv"
                       android:textStyle="normal"
                       android:gravity="center"
                       android:padding="1dp"
                       android:text="3个月"
                       android:textSize="14dp"
                       android:textColor="#101010"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"/>
                   <TextView
                       android:id="@+id/six_month"
                       android:layout_marginLeft="18dp"
                       android:background="@drawable/bg_con_ser_tv"
                       android:textStyle="normal"
                       android:gravity="center"
                       android:padding="1dp"
                       android:text="6个月"
                       android:textSize="14dp"
                       android:textColor="#101010"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"/>
                   <TextView
                       android:layout_marginLeft="18dp"
                       android:layout_marginRight="12dp"
                       android:textStyle="normal"
                       android:padding="1dp"
                       android:gravity="center"
                       android:text=""
                       android:textSize="14dp"
                       android:textColor="#101010"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"/>
               </LinearLayout>
           </LinearLayout>








    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <Button
                    android:id="@+id/tv_reset"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:text="重置"
                    android:background="@drawable/bg_reset_selector"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"/>
                <Button
                    android:id="@+id/tv_complete"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/bg_complete_selector"
                    android:text="完成"
                    android:gravity="center"
                    android:padding="1dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>