<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_cur_con_select"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="名称/批次"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_input_pici"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_con_search_et"
                android:hint="请输入名称/批次"
                android:inputType="text"
                android:text=""
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColorHint="#C4C4C4"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="104dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:text="代次"
                android:textColor="#000000"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_input_daici"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_con_search_et"
                android:hint="请输入代次"
                android:text=""
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:textColorHint="#C4C4C4"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F2F2F2">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="18dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="日期"
                android:textColor="#000000"
                android:textSize="16dp"/>

            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="9dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/all_month"
                    style="@style/condition_search_radiobutton_style"
                    android:layout_marginLeft="12dp"
                    android:text="全部"/>

                <RadioButton
                    android:id="@+id/one_month"
                    style="@style/condition_search_radiobutton_style"
                    android:layout_marginLeft="18dp"
                    android:text="1个月"/>

                <RadioButton
                    android:id="@+id/two_month"
                    style="@style/condition_search_radiobutton_style"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:text="2个月"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/rg2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="18dp"
                android:layout_weight="4"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/three_month"
                    style="@style/condition_search_radiobutton_style"
                    android:layout_marginLeft="12dp"
                    android:text="3个月"/>

                <RadioButton
                    android:id="@+id/six_month"
                    style="@style/condition_search_radiobutton_style"
                    android:layout_marginLeft="18dp"
                    android:text="6个月"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text=""
                    android:textColor="#101010"
                    android:textSize="14dp"
                    android:textStyle="normal"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tv_reset"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_reset_selector"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="重置"
                    android:textColor="#000000"
                    android:textSize="16sp"/>

                <Button
                    android:id="@+id/tv_complete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_complete_selector"
                    android:gravity="center"
                    android:padding="1dp"
                    android:text="完成"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>