<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_title</item>
        <item name="colorPrimaryDark">@color/color_title</item>
        <item name="colorAccent">@color/color_black</item>
    </style>
    <!--底部导航栏的RadioGroup的style-->
    <style name="RG_Main_Style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@drawable/sur_param_textcolor_selector</item>
        <item name="android:layout_weight">1</item>
    </style>
    <!--历史数据中的条件检索-->
    <style name="my_his_ser_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--当前数据和历史数据adapter父亲布局-->
    <style name="enpandablelistview_parent_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">0.1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/textview_border</item>
    </style>
    <!--当前数据和历史数据adapter孩子布局-->
    <style name="enpandablelistview_children_layout_style">
        <item name="android:background">@drawable/textview_border</item>
        <item name="android:layout_marginLeft">0.1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#9D9D9D</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--条件检索radiobutton的样式-->
    <style name="condition_search_radiobutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_con_ser_tv_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">1dp</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>
<!--极光推送-->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
